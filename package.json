{
  "name": "date-music-app",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.DanielleLouie.date-app",
    "productName": "Dates and Activities",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!**/*.md"
    ],
    "mac": {
      "icon": "build/app.icns",
      "category": "public.app-category.lifestyle"
    },
    "win": {
      "icon": "build/app.ico",
      "target": ["nsis"]
    },
    "linux": {
      "icon": "build/app.png",
      "target": ["AppImage"]
    }
  },
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^26.8.1"
  }
}